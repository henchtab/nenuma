{
  "name": "nenuma-server",
  "version": "0.0.1",
  "license": "AGPL-3.0-only",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm run clean && node build.js",
    "build:docker:prod": "docker build . -t my-fastify-app --build-arg APP_ENV=production",
    "check:types": "tsc --noEmit",
    "dev": "tsx --watch src .env .tsconfig.json | pino-pretty --colorize",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "start": "node dist",
    "test": "vitest",
    "test:watch": "vitest -w"
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/redis": "^6.2.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/type-provider-typebox": "^4.0.0",
    "@fastify/websocket": "^10.0.1",
    "@orbs-network/ton-access": "^2.3.3",
    "@scalar/fastify-api-reference": "^1.23.4",
    "@sentry/node": "^8.18.0",
    "@ton/core": "^0.56.3",
    "@ton/crypto": "^3.2.0",
    "@ton/ton": "^13.11.1",
    "ajv": "^8.13.0",
    "bullmq": "^5.8.5",
    "bybit-api": "^3.10.3",
    "dotenv": "^16.4.5",
    "env-schema": "^5.2.1",
    "fastify": "^4.27.0",
    "fastify-plugin": "^4.5.1",
    "fastify-type-provider-zod": "^1.2.0",
    "tweetnacl": "^1.0.3",
    "zod": "^3.23.8",
    "@nenuma/prettier-config": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/ws": "^8.5.10",
    "esbuild": "^0.21.5",
    "@sentry/esbuild-plugin": "^2.21.1",
    "eslint": "^9.3.0",
    "nenuma-contracts": "workspace:*",
    "pino-pretty": "^11.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "files": [
    "dist",
    ".env"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
