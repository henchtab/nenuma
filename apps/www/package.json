{
  "name": "nenuma-app",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "dev": "export NODE_EXTRA_CA_CERTS=$(mkcert -CAROOT)/rootCA.pem && vite dev",
    "build": "vite build",
    "build:digitalocean": "pnpm install --production=false && pnpm run build && rm -rf node_modules && pnpm install --production --frozen-lockfile",
    "preview": "export NODE_EXTRA_CA_CERTS=$(mkcert -CAROOT)/rootCA.pem && vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^5.2.0",
    "@sveltejs/enhanced-img": "^0.3.0",
    "@sveltejs/kit": "^2.5.18",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@types/eslint": "^8.56.10",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.42.0",
    "postcss": "^8.4.39",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.2.5",
    "svelte": "5.0.0-next.166",
    "svelte-check": "^3.8.4",
    "tailwindcss": "^3.4.4",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vite-plugin-mkcert": "^1.17.5",
    "vite-plugin-node-polyfills": "^0.22.0"
  },
  "type": "module",
  "dependencies": {
    "@formkit/auto-animate": "^0.8.2",
    "@sentry/sveltekit": "^8.17.0",
    "@tanstack/svelte-query": "^5.51.1",
    "@telegram-apps/sdk": "^1.1.2",
    "@ton/core": "^0.56.3",
    "@ton/crypto": "^3.2.0",
    "@ton/ton": "^13.11.2",
    "@tonconnect/ui": "^2.0.6",
    "bits-ui": "^0.21.12",
    "clsx": "^2.1.1",
    "js-cookie": "^3.0.5",
    "lightweight-charts": "^4.1.7",
    "lucide-svelte": "^0.408.0",
    "nenuma-contracts": "workspace:*",
    "posthog-js": "^1.147.0",
    "svelte-sonner": "^0.3.27",
    "tailwind-merge": "^2.4.0",
    "tailwind-variants": "^0.2.1",
    "vaul-svelte": "^0.3.2",
    "@nenuma/prettier-config": "workspace:*"
  }
}
